<Window x:Class="GraphManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="MyCanvas" MouseLeftButtonDown="ManageLeftButtonDown" Focusable="True" HorizontalAlignment="Left" Height="357" Margin="29,0,0,0" VerticalAlignment="Center" Width="497" Background="#FFF8F8F8" Cursor="Cross"/>
        <StackPanel Margin="576,75,46,286" >
            <RadioButton x:Name="AddNode" GroupName="CanvasManager" Content="Add Node"></RadioButton>
            <RadioButton x:Name="AddEdge" GroupName="CanvasManager" Content="Add Edge"></RadioButton>
            <RadioButton x:Name="Remove" GroupName="CanvasManager" Content="Remove"></RadioButton>
        </StackPanel>
    </Grid>
</Window>
